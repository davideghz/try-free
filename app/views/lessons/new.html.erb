<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <h1>Create Lesson</h1>

    <%= form_for([@topic, @lesson], html: { multipart: true }) do |f| %>

      <%= f.hidden_field :user_id %>

      <%= f.date_field :lesson_date, id: 'lesson_date', class: 'form', required: 'required' %>

      <%= f.text_field :country, id: 'country', class: 'form', required: 'required', placeholder: 'Country' %>
      <%= f.text_field :city, id: 'city', class: 'form', required: 'required', placeholder: 'City' %>
      <%= f.text_field :address, id: 'address', class: 'form', required: 'required', placeholder: 'Address' %>

      <%= f.file_field :picture, class: "form", accept: 'image/jpeg,image/gif,image/png'  %>

      <%= f.submit "Add", class: "form-btn" %>
    <% end %>
    <hr>
    <%= button_to "Back", @topic, method: :get, class: 'form-btn blue' %>

  </div>
</div>


<script type="text/javascript">
  $('#lesson_picture').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 1) {
      alert('Maximum file size is 1MB. Please choose a smaller file.');
    }
  });
</script>
