<div class="col-xs-12 col-sm-6 col-md-4">
  <div class="thumbnail element">
    <% if @profile.profile_picture? %>
        <%= image_tag @profile.profile_picture.url %>
    <% end %>
    <div class="caption">
      <h3><%= @profile.first_name %> <%= @profile.last_name %></h3>
    </div>
  </div>
</div>